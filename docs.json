{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "ContraForce",
  "colors": {
    "primary": "#2557F9",
    "light": "#2E6FFF",
    "dark": "#1038E5"
  },
  "favicon": "/images/contraforce_mark_blue.svg",
